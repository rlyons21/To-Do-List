 <div class="mainContent">

<h1 class="ListTitle">To Do List</h1>
<% @incompleteTasks.each do |element| %>
	<ul class = "TaskList">
		<li class = "TaskList__item"><%= element %></li>
		<form method="post" action="/delete"> 
			<input type="hidden" name="num" value ="2">
			<input type="submit" value="Delete">
		</form>
	</ul>
<% end %>

<h1 class="ListTitle">Completed Tasks</h1>
<% @completedTasks.each do |element| %>
	<ul>
		<li class="TaskList__item"><%= element %></li>
	</ul>
<% end %>

</div>

