<h1 class="TaskList">To Do List</h1>
<% @incompleteTasks.each do |element| %>
	
	<form method="post" action="/"> 
		<textarea class= "TaskList__item"> <%= element %> </textarea>
		<input type="hidden" name="num" value="2">
		<input type="submit" value="Delete">
	</form>
<% end %>

<h1 class="TaskList">Completed Tasks</h1>
<% @completedTasks.each do |element| %>
	<p class="TaskList__item"><%= element %></p>
<% end %>

