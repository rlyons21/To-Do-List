<div class="left">
	<div class="navContent">
		<form action="/new">
			<input class = "addTask" type="submit" value ="Add a Task">
		</form>

		<ul class=navLinks>
			<li class="navigation"><a class="navLinks__link" href="/">All Tasks</a></li>
			<li class="navigation"><a class="navLinks__link" href="/filtered?user=Bob">Bob</a></li>
			<li class="navigation"><a class="navLinks__link" href="/filtered?user=Mary">Mary</a></li>
			<li class="navigation"><a class="navLinks__link" href="/filtered?user=Joe">Joe</a></li>
			<li class="navigation"><a class="navLinks__link" href="/filtered?user=Lisa">Lisa</a></li>
		</ul>
	</div>
</div>

<div class="mainContent">
	
	<h1> <%= @member %>'s Tasks</h1>

	<h3 class="toDoTitle"> To Do </h3>

	<% if !@theseAreNotDone.nil? %>
		<% @theseAreNotDone.each do |element| %>
			<ul class="taskList">
				<div class="task">

					<form method="post" action="/delete"> 
						<input type="hidden" name="num" value ="<%= element[3]%>">
						<span title="Delete Task"><input class ="delete-edit" type="image" src="/images/delete-icon.png" alt="D"></span>
					</form>

					<form method="post" action="/edit"> 
						<input type="hidden" name="num" value ="<%= element[3]%>">
						<span title="Edit Task"><input class ="delete-edit" type="image" src="/images/edit-icon.png" alt="E"></span>
						<input type="hidden" name="status" value ="<%= element[0]%>">
						<input type="hidden" name="task" value ="<%= element[2]%>">
						<input type="hidden" name="person" value ="<%= element[1]%>">
					</form>
					<li class = "taskList__task"><%= element[2] %></li>
				</div>
			</ul>
		<% end %>
	<% else %>
		<p> There are no tasks! </p>
	<% end %>

	<h3 class="completeTitle"> Completed Tasks </h3>
	<% if !@theseAreDone.nil? %>
		<% @theseAreDone.each do |element| %>
		
		<ul class ="taskList">	
			<div class="task">
				
				<form method="post" action="/delete"> 
					<input type="hidden" name="num" value ="<%= element[3]%>">
					<span title="Delete Task"><input class ="delete-edit" type="image" src="/images/delete-icon.png" alt="D"></span>
				</form>
				
				<form method="post" action="/edit"> 
					<input type="hidden" name="num" value ="<%= element[3]%>">
					<span title="Edit Task"><input class ="delete-edit" type="image" src="/images/edit-icon.png" alt="E"></span>
					<input type="hidden" name="status" value ="<%= element[0]%>">
					<input type="hidden" name="task" value ="<%= element[2]%>">
					<input type="hidden" name="person" value ="<%= element[1]%>">
				</form>

					<li class = "taskList__task"><%= element[2] %></li>
				</div>
			</ul>
		<% end %>
	<% else %>
		<p> There are no tasks! </p>
	<% end %>
</div>