<h1> EDIT </h1>

<div class="mainContent">

<form method="post" action="/edit/process" >
		
		<div>
			<input type="text" name="task" value="<%= @task["description"] %>">
		</div>
		<div>
			<p>Family Member</p>
		</div>
		<div>
			<div>
			  <label>
			   <input type="radio" name="person" value="Bob" <%= "selected" if @task["assignee"] == "Bob" %>>
			    Bob
			  </label>
			</div>

			<div>
			  <label>
			    <input type="radio" name="person" value="Mary" <%= "selected" if @task["assignee"] == "Mary" %>>
			    Mary
			  </label>
			</div>

			<div>
			  <label>
			    <input type="radio" name="person" value="Joe" <%= "selected" if @task["assignee"] == "Joe" %>>
			    Joe
			  </label>
			</div>

			<div>
			  <label>
			    <input type="radio" name="person" value="Lisa" <%= "selected" if @task["assignee"] == "Lisa" %>>
			    Lisa
			  </label>
			</div>
		</div>
		<div>
			<p>Status</p>
		</div>
		<div>
			<div>
			  <label>
			    <input type="radio" name="status" value="i">
			    Incomplete
			  </label>
			</div>

			<div>
			  <label>
			    <input type="radio" name="status" value="c">
			    Complete
			  </label>
			</div>
		</div>

		<input type="hidden" name="num" value="<%= params[:num] %>">

		<button type="submit" value="Submit">Submit</button>
  		<button href="/" type="reset" value="Reset">Cancel</button>
</form>
</div>
